<Window x:Class="ALMSPL.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALMSPL"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="223,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="307" Name="txtId"/>
        <Label Content="User Id:" HorizontalAlignment="Left" Height="31" Margin="107,140,0,0" VerticalAlignment="Top" Width="60" FontSize="15"/>
        <Label Content="Forgot Password Page" HorizontalAlignment="Left" Height="54" Margin="244,36,0,0" VerticalAlignment="Top" Width="204" FontSize="20"/>
        <Button Content="Set New Password" HorizontalAlignment="Left" Height="26" Margin="244,256,0,0" VerticalAlignment="Top" Width="193" Click="Forgot" />
        <Label Content="Email Id:" HorizontalAlignment="Left" Height="26" Margin="107,193,0,0" VerticalAlignment="Top" Width="77" FontSize="15"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="223,193,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="307" Name="txtEmail"/>

    </Grid>
</Window>
